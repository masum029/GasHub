@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section-padding section-bg">
    <div class="container">
        <div class="row g-3 p-3 mx-5">
            <div class="col-md-8" id="product-list">
                <!-- Product items will be dynamically inserted here -->
            </div>
            <div class="col-md-4 px-5">
                <div class="d-flex align-items-start flex-column">
                    <div class="d-flex w-100 flex-column justify-content-center">
                        <p class="mx-auto">Please add your address before order</p>
                        <button class="btn btn-sm w-50 btn-dark mx-auto mt-2 text-white">Add Address</button>
                    </div>
                    <div class="mt-5 w-100">
                        <div class="d-flex justify-content-between">
                            <p>Subtotal</p>
                            <p>Tk <span id="subtotal">00</span></p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p>Total</p>
                            <p>Tk <span id="total">00</span></p>
                        </div>
                    </div>
                    <div class="mt-5 w-100">
                        <button class="btn w-100 btn-dark">Confirm Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script src="~/js/inventory/product/CheckOutProduct.js"></script>
}

