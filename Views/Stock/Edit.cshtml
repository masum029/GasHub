@model GasHub.Models.ViewModels.StockViewModel

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit Stock </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Stock</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>




<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit Stock</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Edit">
                        <div class="card-body">
                            <a asp-action="Index" class="btn btn-success my-2"> <i class="fa fa-list"></i> Back to Stock List</a>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="ProductList"></label>
                                                <select class="form-control" asp-for="Stock.ProductId">
                                                    <option value="">Select Chapter</option>
                                                    @foreach (var product in Model.ProductList)
                                                    {
                                                        <option value="@product.Id">@product.Name</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="TraderList"></label>
                                                <select class="form-control" asp-for="Stock.TraderId">
                                                    <option value="">Select Chapter</option>
                                                    @foreach (var trader in Model.TraderList)
                                                    {
                                                        <option value="@trader.Id">@trader.Name</option>
                                                    }
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label asp-for="Stock.Quantity" class="control-label"></label>
                                                <input asp-for="Stock.Quantity" class="form-control" />
                                                <span asp-validation-for="Stock.Quantity" class="text-danger"></span>
                                            </div>
                                            <div class="form-group" hidden="true">
                                                <label asp-for="Stock.Id" class="control-label"></label>
                                                <input asp-for="Stock.Id" class="form-control" />
                                                <span asp-validation-for="Stock.Id" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="Stock.IsQC" /> @Html.DisplayNameFor(model => model.Stock.IsQC)
                                                </label>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Stock.IsActive" class="control-label"></label>
                                                <select asp-for="Stock.IsActive" class="form-control">
                                                    <option value="">-- Select --</option>
                                                    <option value="true">Active</option>
                                                    <option value="false">Inactive</option>
                                                </select>
                                                <span asp-validation-for="Stock.IsActive" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Stock.CreationDate" class="control-label"></label>
                                                <input asp-for="Stock.CreationDate" class="form-control" />
                                                <span asp-validation-for="Stock.CreationDate" class="text-danger"></span>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label asp-for="Stock.UpdateDate" class="control-label"></label>
                                                <input asp-for="Stock.UpdateDate" class="form-control" />
                                                <span asp-validation-for="Stock.UpdateDate" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Stock.CreatedBy" class="control-label"></label>
                                                <input asp-for="Stock.CreatedBy" class="form-control" />
                                                <span asp-validation-for="Stock.CreatedBy" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Stock.UpdatedBy" class="control-label"></label>
                                                <input asp-for="Stock.UpdatedBy" class="form-control" />
                                                <span asp-validation-for="Stock.UpdatedBy" class="text-danger"></span>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <input type="submit" value="Save Stock" class="btn btn-success" />
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
