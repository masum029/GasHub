@model GasHub.Models.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create Product </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Product </a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>




<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create Product </h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create">
                        <div class="card-body">
                            <a asp-action="Index" class="btn btn-success my-2"> <i class="fa fa-list"></i> Back to Product List</a>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">
                                           
                                            <div class="form-group">
                                                <label asp-for="companiList"></label>
                                                <select class="form-control" asp-for="Product.CompanyId">
                                                    <option value="">Select Chapter</option>
                                                    @foreach (var company in Model.companiList)
                                                    {
                                                        <option value="@company.Id">@company.Name</option>
                                                    }
                                                </select>
                                            </div>
                                           
                                            <div class="form-group">
                                                <label asp-for="Product.Name" class="control-label"></label>
                                                <input asp-for="Product.Name" class="form-control" />
                                                <span asp-validation-for="Product.Name" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="productSizeList"></label>
                                                <select class="form-control" asp-for="Product.ProdSizeId">
                                                    <option value="">Select Chapter</option>
                                                    @foreach (var productSize in Model.productSizeList)
                                                    {
                                                        <option value="@productSize.Id">@productSize.Size</option>
                                                    }
                                                </select>
                                            </div>
                                            
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="ValveList"></label>
                                                <select class="form-control" asp-for="Product.ProdValveId">
                                                    <option value="">Select Chapter</option>
                                                    @foreach (var valve in Model.ValveList)
                                                    {
                                                        <option value="@valve.Id">@valve.Name</option>
                                                    }
                                                </select>
                                            </div>
                                           
                                            <div class="form-group">
                                                <label asp-for="Product.ProdImage" class="control-label"></label>
                                                <input asp-for="Product.ProdImage" class="form-control" />
                                                <span asp-validation-for="Product.ProdImage" class="text-danger"></span>
                                            </div>
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="Product.IsActive" /> @Html.DisplayNameFor(model => model.Product.IsActive)
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Product.CreationDate" class="control-label"></label>
                                                <input asp-for="Product.CreationDate" class="form-control" />
                                                <span asp-validation-for="Product.CreationDate" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Product.UpdateDate" class="control-label"></label>
                                                <input asp-for="Product.UpdateDate" class="form-control" />
                                                <span asp-validation-for="Product.UpdateDate" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Product.CreatedBy" class="control-label"></label>
                                                <input asp-for="Product.CreatedBy" class="form-control" />
                                                <span asp-validation-for="Product.CreatedBy" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="Product.UpdatedBy" class="control-label"></label>
                                                <input asp-for="Product.UpdatedBy" class="form-control" />
                                                <span asp-validation-for="Product.UpdatedBy" class="text-danger"></span>
                                            </div>

                                        </div>

                                    </div>
                                </div>

                            </div>


                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <input type="submit" value="Create Company" class="btn btn-success" />
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
